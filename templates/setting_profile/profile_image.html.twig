{% extends 'base.html.twig' %}

{% block title %}Profile image{% endblock %}

{% block bread %}
  -> Profile image
{% endblock %}

{% block body %}

    {{ include('setting_profile/_setting_profile_tabs.html.twig') }}
    
    <div class="flex items-center">
      {{ include('shared/_avatar.html.twig', {'size': 32, profile: app.user.userProfile}) }}

      <div class="ml-16">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_label(form.profileImage, 'Upload photo', {'label_attr': {'class': 'shadow-sm border-transparent bg-gray-300 hover:bg-gray-400 dark:bg-gray-700 dark:hover:bg-gray-900 cursor-pointer rounded-md border p-2'}}) }}
        {{ form_widget(form.profileImage, {'attr': {'class': 'hidden'}}) }}
        {{ form_errors(form.profileImage) }}
      </div>
    </div>

      <div>
        <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Save image</button>
      </div>
      {{ form_end(form) }}

{% endblock %}
